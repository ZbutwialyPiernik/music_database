<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h1 class="text-5xl font-bold mt-0">Song</h1>

    <%= render @song %>

    <%= link_to 'Edit this song', edit_song_path(@song), class: "mt-2 rounded-lg py-3 px-5 bg-blue-500 text-white inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this song', song_path(@song), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 text-white font-medium" %>
    </div>
    <%= link_to 'Back to songs', songs_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
