<div id="<%= dom_id album %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= album.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Release date:</strong>
    <%= album.release_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Artist:</strong>
    <%= link_to album.artist.name, album.artist, class: "color-skyblue-500 underline" %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this album", album, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this album', edit_album_path(album), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
